<h3>Listings</h3>
<% if @listings.any? %>
  <div class="grid">
    <% @listings.each do |l| %>
      <%= render partial: "listings/card", locals: { listing: l } %>
    <% end %>
  </div>
<% else %>
  <p class="muted">No listings.</p>
<% end %>

