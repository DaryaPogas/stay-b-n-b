<h1>Reviews for "<%= @listing.title %>"</h1>
<% if @reviews.any? %>
  <ul>
    <% @reviews.each do |r| %>
      <li><strong><%= r.user&.name %></strong> — <%= r.rating %> — <%= r.comment %></li>
    <% end %>
  </ul>
<% else %>
  <p>No reviews.</p>
<% end %>
<p><%= link_to "Back to listing", listing_path(@listing) %></p>
